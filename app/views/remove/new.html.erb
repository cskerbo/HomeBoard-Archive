<%= form_for @user, url: '/remove', method: :post, action: :create do |f| %>
  <div class="row h-100">
  <div class="col-sm-12 my-auto">
    <div class="card card-block w-50 p-5 mx-auto">
<form class="form-signin">
  <br><img class="mb-4 mx-auto my-auto" src="https://img.icons8.com/office/160/000000/home.png" alt="" width="72" height="72"><br>
  <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
  <%= f.label :username, class: "sr-only"%>
  <%= f.text_field :username, :required => true, class: "form-control", placeholder: "Username"%>
  <p class="text-center text-danger font-weight-bold"><%= flash[:username_error] %></p>
  <%= f.label :password, class: "sr-only"%>
  <%= f.text_field :password, :required => true, class: "form-control", placeholder: "Password", type: "password" %>
  <p class="text-center text-danger font-weight-bold"><%= flash[:password_error] %></p>
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>

  <%= f.submit "Sign In", class: "btn btn-lg btn-primary btn-block" %>
  <p class="mt-3 mb-1  text-center">New user? <%= link_to "Create an Account", new_user_path %></p>
  <p class="mt-3 mb-1 text-muted text-center">&copy; 2020</p>
</div>
  </div>
</div>
<% end %>