<%= form_for @home do |f| %>
    <% if @home.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:
        </h2>

        <ul>
          <% @home.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form-group">
    <%= f.label :name, "Home Name" %>
    <span class="help-block">(This will function as the name of your dashboard.)</span>
    <%= f.text_field :name, class: "form-control", placeholder: "ex: Addams Family" %>
  </div>

  <div class="form-group">
    <%= f.label :zip_code, "Zip Code" %>
    <br>
    <span class="help-block">(We need this to show you the weather and other geographic information.)</span>
    <%= f.number_field :zip_code, class: "form-control", placeholder: "ex: 98001" %>
  </div>
    <div class="actions">
      <br/>
      <%= f.submit class: "btn btn-primary" %>
    </div>

<% end %>