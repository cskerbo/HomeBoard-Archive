<%= form_for @home do |f| %>
    <% if @home.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:
        </h2>

        <ul>
          <% @home.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form-group">
    <%= f.label :name, "Home Name" %>
    <span class="help-block">(This will function as the name of your dashboard.)</span>
    <%= f.text_field :name, class: "form-control", placeholder: "ex: Addams Family", :required => true %>
  </div>

  <div class="form-group">
    <span class="help-block">(HomeBoard does not track your location, your data is is encrypted, and no user data is provided to third parties. We need this to show you geographic information.)</span>
    <%= f.label :street, "Street" %><br>
    <%= f.text_field :street, class: "form-control", placeholder: "ex: 123 Drive St", :required => true %>
    <%= f.label :city, "City" %><br>
    <%= f.text_field :city, class: "form-control", placeholder: "ex: Auburn", :required => true %>
    <%= f.label :zip_code, "Zip Code" %><br>
    <%= f.number_field :zip_code, class: "form-control", placeholder: "ex: 98001", :required => true %>
    <%= f.label :state, "State" %><br>
    <%= f.select :state, options_for_select(@states), class: "form-control", placeholder: "ex: WA", :prompt => "Select a state", :required => true %><br>
  </div>
    <div class="actions">
      <br/>
      <%= f.submit class: "btn btn-primary" %>
    </div>

<% end %>