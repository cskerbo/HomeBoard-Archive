<%= form_tag('/session', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:name, "Username:") %>

    <%= text_field_tag(:username, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>

<% end %>